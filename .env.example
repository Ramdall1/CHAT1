# ===== Configuración del servidor =====
PORT=3000
LOG_LEVEL=info
NODE_ENV=development

# ===== 360dialog API Configuration =====
# Clave de API de 360Dialog (reemplazar con tu clave real)
DIALOG360_API_KEY=your_360dialog_api_key_here
WABA_API_BASE=https://waba-v2.360dialog.io

# ===== Partner Configuration =====
# Partner de 360Dialog (reemplazar con tu información real)
DIALOG360_PARTNER_NAME=your_partner_name_here
DIALOG360_PARTNER_ID=your_partner_id_here

# ===== AI Configuration =====
AI_ENDPOINT=http://localhost:1234/v1/chat/completions
AI_MODEL=gpt-3.5-turbo
AI_API_KEY=your_ai_api_key_here
IA_ENABLED=true

# ===== Webhook Configuration =====
NGROK_URL=https://your-ngrok-url.ngrok-free.app
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# ===== 360dialog / WABA Account Details =====
D360_WABA_ACCOUNT_ID=your_waba_account_id
D360_PARTNER_ID=srMmqpPA
D360_WHATSAPP_CHANNEL_ID=your_whatsapp_channel_id
D360_WABA_CHANNEL_EXTERNAL_ID=your_waba_channel_external_id
D360_PHONE_NUMBER_ID=your_phone_number_id
D360_NAMESPACE=your_namespace_here
D360_TIMEZONE_ID=your_timezone_id
D360_FB_BUSINESS_MANAGER_ID=your_fb_business_manager_id
D360_WABA_BUSINESS_ACCOUNT_ID=your_waba_business_account_id

# ===== Database Configuration =====
DATABASE_URL=mongodb://localhost:27017/chatbot_enterprise
# o para PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/chatbot_enterprise

# ===== Redis Configuration =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# ===== JWT Configuration =====
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=1h
REFRESH_EXPIRES_IN=7d

# ===== Security Configuration =====
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800000

# ===== Rate Limiting =====
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false
TRUSTED_IPS=192.168.1.100,10.0.0.50

# ===== 2FA Configuration =====
TWO_FACTOR_ISSUER=ChatBot
SMS_ENABLED=false
SMS_PROVIDER=disabled
# TWILIO_ACCOUNT_SID=your_twilio_sid # Deshabilitado - Twilio removido del proyecto
# TWILIO_AUTH_TOKEN=your_twilio_token # Deshabilitado - Twilio removido del proyecto
# TWILIO_PHONE_NUMBER=+1234567890 # Deshabilitado - Twilio removido del proyecto

# ===== Billing & Commerce =====
BILLING_ENABLED=true
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
INVOICE_AUTO_GENERATION=true

# ===== Email Configuration =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# ===== Monitoring & Analytics =====
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
METRICS_ENDPOINT=/metrics

# ===== Geolocation & Security =====
ENABLE_GEOLOCATION=true
ENABLE_VPN_DETECTION=true
RISK_COUNTRIES=CN,RU,KP

# Geolocation Service Configuration
# Options: ipapi, ipinfo, maxmind
GEOLOCATION_SERVICE=ipapi
GEOLOCATION_API_KEY=your_geolocation_api_key

# MaxMind Configuration (when using maxmind service)
# Type: webservice or database
MAXMIND_TYPE=webservice
MAXMIND_USER_ID=your_maxmind_user_id
MAXMIND_API_KEY=your_maxmind_api_key
MAXMIND_DATABASE_PATH=./data/GeoLite2-City.mmdb
MAXMIND_TIMEOUT=5000

# ===== Debug & Development =====
DEBUG_MODE=false
ENABLE_DEBUG_DASHBOARD=false
DEBUG_DASHBOARD_PORT=3001