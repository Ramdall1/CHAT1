# =====================================================
# ChatBot Enterprise - Configuración de Migración
# =====================================================

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=chatbot_enterprise
MONGODB_USERNAME=
MONGODB_PASSWORD=

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=chatbot_enterprise
POSTGRES_USER=chatbot_app
POSTGRES_PASSWORD=secure_app_password

# Migration Settings
BATCH_SIZE=1000
MIGRATION_TIMEOUT=300000
MAX_RETRIES=3
PARALLEL_WORKERS=4

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=true

# Validation Settings
SKIP_VALIDATION=false
CONTINUE_ON_ERROR=false
DETAILED_VALIDATION=true

# Performance Settings
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=30000
IDLE_TIMEOUT=10000

# Backup Settings
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Security Settings
ENABLE_SSL=false
SSL_CERT_PATH=
SSL_KEY_PATH=
SSL_CA_PATH=

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000